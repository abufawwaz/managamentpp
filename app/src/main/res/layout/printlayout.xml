<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
           android:orientation="vertical"
        tools:ignore="MissingConstraints,WebViewLayout">
        <TextView
            android:id="@+id/txt_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="#FFF"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
        android:id="@+id/layout_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >


            <ImageView
                android:id="@+id/btnConnPrint"
                android:layout_width="8dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_search"

                />

        <ImageView
            android:id="@+id/btnLoad"
            android:layout_width="8dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_load"
            />


        <ImageView
            android:id="@+id/btnPrint"
            android:layout_width="5dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"

            android:layout_margin="10dp"
            android:layout_weight="1"
             android:src="@drawable/printblack"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btnPrintbefore"
                android:layout_width="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/ic_daun"
                android:src="@drawable/prev"
                />



            <EditText
                android:id="@+id/editNumberOrder"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:inputType="number"
                android:lines="1" />
            <ImageView
                android:id="@+id/btnPrintnext"
                android:layout_width="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/ic_daun"
                android:src="@drawable/next"
                />


        </LinearLayout>

    <TextView
        android:id="@+id/tvmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text Print : "
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="15dip"

        />

        <EditText
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"

            android:gravity="top"
            android:hint="Print text"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" />
        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>